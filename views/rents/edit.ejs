<% layout('layouts/boilerplate') %>

<div class="mb-2 formlogin-register">
    <div class="row">
        <h1 class="text-center"> UPDATE Rent HOME </h1>
        <div>

            <form action="/rent/<%=rent._id %>?_method=PUT" method="POST" novalidate class="validated-form" 
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="rent[title]"
                        value="<%= rent.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="rent[location]"
                        value="<%= rent.location %>" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>   
                </div>

                <div class="mb-3">
                    <label class="form-label" for="contact">Contact</label>
                    <input class="form-control" type="text" id="contact" name="rent[contact]"
                        value="<%= rent.contact %>" required>
                    <div class="valid-feedback">
                        looks good!
                    </div>   
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">ADD Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>    
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Rent Price </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price-label"
                        name="rent[price]"    value="<%= rent.price %>" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="rent[description]"
                        required> <%= rent.description %> </textarea>
                </div>

                <button class="btn btn-success mb-3"> EDIT Rent-Home </button>

            </form>

            <p>
                <a class="btn btn-primary" href="/rent"> ALL Rent-Home</a>
                <a class="btn btn-primary" href="/rent/<%= rent._id %>"> Back to rent-Home </a>
            </p>

        </div>
    </div>

</div>    